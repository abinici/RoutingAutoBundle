<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="cmf_routing_auto.phpcrodm_auto_route_listener_class">Symfony\Cmf\Bundle\RoutingAutoBundle\Doctrine\Phpcr\AutoRouteListener</parameter>
        <parameter key="cmf_routing_auto.auto_route_manager_class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\AutoRouteManager</parameter>
        <parameter key="cmf_routing_auto.factory_class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\Factory</parameter>
        <parameter key="cmf_routing_auto.route_stack_builder_class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\RouteStack\Builder</parameter>
        <parameter key="cmf_routing_auto.route_patcher_class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\RoutePatcher\GenericPatcher</parameter>
        <parameter key="cmf_routing_auto.driver.phpcr_odm_class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\Driver\PhpcrOdmDriver</parameter>

        <parameter key="cmf_routing_auto.mapping.loader.yaml.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\Mapping\Loader\YmlFileLoader</parameter>
        <parameter key="cmf_routing_auto.mapping.loader.xml.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\Mapping\Loader\XmlFileLoader</parameter>
        <parameter key="cmf_routing_auto.mapping.loader.delegating.class">Symfony\Component\Config\Loader\DelegatingLoader</parameter>
        <parameter key="cmf_routing_auto.mapping.loader.resolver.class">Symfony\Component\Config\Loader\LoaderResolver</parameter>
        <parameter key="cmf_routing_auto.mapping.factory.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\Mapping\MetadataFactory</parameter>
        <parameter key="cmf_routing_auto.mapping.driver.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\Mapping\Loader\MetadataDriver</parameter>
        <parameter key="cmf_routing_auto.mapping.cache.file.class">Metadata\Cache\FileCache</parameter>
        <parameter key="cmf_routing_auto.mapping.cache_warmer.class">Symfony\Cmf\Bundle\RoutingAutoBundle\CacheWarmer\AutoRouteCacheWarmer</parameter>

    </parameters>

    <services>
        <service
            id="cmf_routing_auto.slugifier"
            class="Symfony\Cmf\Bundle\CoreBundle\Slugifier\CallbackSlugifier"
            >
            <argument>Ferrandini\Urlizer::urlize</argument>
        </service>

        <service
            id="cmf_routing_auto.auto_route_manager"
            class="Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\AutoRouteManager"
            >
            <argument type="service" id="cmf_routing_auto.driver.phpcr_odm"/>
            <argument type="service" id="cmf_routing_auto.factory"/>
            <argument type="service" id="cmf_routing_auto.route_stack_builder"/>
        </service>

        <service id="cmf_routing_auto.phpcrodm_auto_route_listener" class="%cmf_routing_auto.phpcrodm_auto_route_listener_class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine_phpcr.event_listener" event="onFlush"/>
        </service>

        <service id="cmf_routing_auto.factory" class="%cmf_routing_auto.factory_class%">
            <argument type="service" id="cmf_routing_auto.mapping.factory" />
            <argument type="service" id="service_container"/>
            <argument type="service" id="cmf_routing_auto.route_stack_builder"/>

        </service>

        <service id="cmf_routing_auto.route_stack_builder" class="%cmf_routing_auto.route_stack_builder_class%">
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
        </service>

        <service id="cmf_routing_auto.route_patcher" class="%cmf_routing_auto.route_patcher_class%">
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
        </service>

        <service id="cmf_routing_auto.driver.phpcr_odm" class="%cmf_routing_auto.driver.phpcr_odm_class%">
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
        </service>

        <service id="cmf_routing_auto.mapping.loader.yaml"
            class="%cmf_routing_auto.mapping.loader.yaml.class%"
        >
            <argument type="service" id="file_locator" />
        </service>

        <service id="cmf_routing_auto.mapping.loader.xml"
            class="%cmf_routing_auto.mapping.loader.xml.class%"
        >
            <argument type="service" id="file_locator" />
        </service>

        <service id="cmf_routing_auto.mapping.loader.resolver" class="%cmf_routing_auto.mapping.loader.resolver.class%">
            <argument type="collection">
                <argument type="service" id="cmf_routing_auto.mapping.loader.yaml" />
                <argument type="service" id="cmf_routing_auto.mapping.loader.xml" />
            </argument>
        </service>

        <service id="cmf_routing_auto.mapping.loader.delegating" class="%cmf_routing_auto.mapping.loader.delegating.class%">
            <argument type="service" id="cmf_routing_auto.mapping.loader.resolver" />
        </service>

        <service id="cmf_routing_auto.mapping.loader" alias="cmf_routing_auto.mapping.loader.delegating" />

        <service id="cmf_routing_auto.mapping.driver" class="%cmf_routing_auto.mapping.driver.class%">
            <argument type="service" id="cmf_routing_auto.mapping.loader" />
            <argument>%cmf_routing_auto.mapping.loader.resources%</argument>
        </service>

        <service id="cmf_routing_auto.mapping.cache.file" class="%cmf_routing_auto.mapping.cache.file.class%">
            <argument>%kernel.cache_dir%/cmf/routing_auto</argument>
        </service>

        <service id="cmf_routing_auto.mapping.cache" alias="cmf_routing_auto.mapping.cache.file" />

        <service id="cmf_routing_auto.mapping.cache_warmer" class="%cmf_routing_auto.mapping.cache_warmer.class%">
            <argument type="service" id="filesystem" />

            <tag name="kernel.cache_warmer" />
        </service>

        <service id="cmf_routing_auto.mapping.factory"
            class="%cmf_routing_auto.mapping.factory.class%">
            <argument type="service" id="cmf_routing_auto.mapping.driver" />
            <argument type="service" id="cmf_routing_auto.mapping.cache" />
        </service>
    </services>
</container>
